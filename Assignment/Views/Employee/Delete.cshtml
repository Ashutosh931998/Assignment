@model Assignment.Models.EmployeeValidation
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {            @Html.AntiForgeryToken()
            <table>
                <tr>
                    <td>Name</td>
                    <td>@Html.TextBoxFor(e => e.Name)</td>
                    <td>@Html.ValidationMessageFor(e => e.Name)</td>
                </tr>
                <tr>
                    <td>Age</td>
                    <td>@Html.TextBoxFor(e => e.Age)</td>
                    <td>@Html.ValidationMessageFor(e => e.Age)</td>
                </tr>
                <tr>
                    <td>Salary</td>
                    <td>@Html.TextBoxFor(e => e.salary)</td>
                    <td>@Html.ValidationMessageFor(e => e.salary)</td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="submit" />
                    </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
