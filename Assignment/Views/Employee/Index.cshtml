@model IEnumerable<Assignment.Models.EmployeeValidation>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
      @Html.ActionLink("Add Employee","Create")
        <hr/>
        <table border="1">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>salary</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.salary</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new {@id=item.Name})
                            @Html.ActionLink("Delete", "Delete", new {@id=item.Name })
                        </td>
                    </tr>
                }
            </tbody>

        </table>  
    </div>
</body>
</html>
